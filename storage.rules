rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isValidFileType() {
      return request.resource.contentType.matches('image/(jpeg|png|gif|webp)')
          || request.resource.contentType.matches('video/(mp4|webm)');
    }

    function isValidFileSize() {
      return request.resource.size < 10 * 1024 * 1024; // 10MB
    }

    match /chatRooms/{roomId}/{userId}/{fileName} {
      allow read: if true;
      allow write: if isValidFileType() && isValidFileSize();
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
